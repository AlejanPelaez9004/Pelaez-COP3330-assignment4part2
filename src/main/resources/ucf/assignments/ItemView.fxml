        <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="TOP_CENTER">
            <BorderPane prefHeight="12.0" prefWidth="1266.0">
                <left>
                    <Pane BorderPane.alignment="TOP_LEFT">
                        <BorderPane.margin>
                            <Insets/>
                        </BorderPane.margin>
                        <MenuButton fx:id="fileButton" layoutY="2.0" mnemonicParsing="false" prefHeight="13.0"
                                    prefWidth="50.0" text="File">
                            <items>
                                <MenuItem fx:id="saveMenuOption" mnemonicParsing="false" onAction="#onSavePressed"
                                          text="Save"/>
                                <MenuItem fx:id="loadMenuOption" mnemonicParsing="false" onAction="#onLoadPressed"
                                          text="Load"/>
                            </items>
                        </MenuButton>
                    </Pane>
                </left>
                <center>
                    <Label text="To-Do List Application" BorderPane.alignment="CENTER">
                        <font>
                            <Font size="14.0"/>
                        </font>
                        <BorderPane.margin>
                            <Insets right="-10.0"/>
                        </BorderPane.margin>
                    </Label>
                </center>
            </BorderPane>
        </ToolBar>
    </top>
    <center>
        <BorderPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: darkgrey;" BorderPane.alignment="CENTER">
            <center>
                <ListView fx:id="todoItemView" onMouseClicked="#onItemListClicked" style=".list-cell{-fx-font}: 14pt;" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="20.0" left="50.0" right="50.0" top="5.0" />
                    </BorderPane.margin>
               <contextMenu>
                  <ContextMenu>
                    <items>
                      <MenuItem fx:id="deleteSelected" mnemonicParsing="false" onAction="#onDeleteSelectedPressed" text="Delete Selected" />
                        <MenuItem fx:id="removeAll" mnemonicParsing="false" onAction="#onRemoveAllPressed" text="Remove All" />
                    </items>
                  </ContextMenu>
               </contextMenu>
                </ListView>
            </center>
            <top>
                <Pane blendMode="SRC_ATOP" prefHeight="49.0" prefWidth="1280.0" style="-fx-background-color: white;"
                      BorderPane.alignment="CENTER">
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                    <Button fx:id="addButton" layoutX="308.0" layoutY="11.0" mnemonicParsing="false"
                            onAction="#onAddButtonPressed" text="Add">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Button>
                    <TextField fx:id="itemTextField" layoutX="97.0" layoutY="11.0" onAction="#onAddButtonPressed"
                               prefHeight="25.0" prefWidth="211.0" promptText="Item Name">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </TextField>
                    <MenuButton fx:id="displayDropdown" alignment="TOP_RIGHT" layoutX="790.0" layoutY="10.0"
                                mnemonicParsing="false" prefHeight="32.0" prefWidth="88.0" text="Display">
                        <items>
                            <MenuItem fx:id="allOption" mnemonicParsing="false" onAction="#onAllOptionSelected"
                                      text="All"/>
                            <MenuItem fx:id="incompleteOption" mnemonicParsing="false"
                                      onAction="#onIncompleteOptionSelected" text="Incomplete"/>
                            <MenuItem fx:id="completeOption" mnemonicParsing="false"
                                      onAction="#onCompleteOptionSelected" text="Complete"/>
                        </items>
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </MenuButton>
                    <DatePicker fx:id="datePicker" layoutX="486.0" layoutY="11.0" onAction="#onDatePickerAction"
                                prefHeight="30.0" prefWidth="184.0" promptText="Due Date"/>
                    <CheckBox fx:id="completeCheckbox" layoutX="1023.0" layoutY="13.0" mnemonicParsing="false"
                              onAction="#onCompleteCheckbox" text="Complete" textFill="#3f543d">
                        <font>
                            <Font size="18.0"/>
                        </font>
                    </CheckBox>
                    <Separator layoutX="-13.0" layoutY="45.0" prefHeight="7.0" prefWidth="1292.0"/>
                    <Button fx:id="renameButton" layoutX="352.0" layoutY="11.0" mnemonicParsing="false"
                            onAction="#onRenameButtonPressed" text="Rename">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Button>
                </Pane>
            </top>
        </BorderPane>
    </center>
</BorderPane>
